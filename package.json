{
  "name": "pocketcrud",
  "version": "0.2.0",
  "description": "A lightweight, framework-agnostic library for simplified PocketBase CRUD operations with ready-to-use UI components",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/jackkeller/pocketcrud.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./svelte": {
      "default": "./dist/components/svelte/index.js"
    },
    "./svelte/auth": {
      "default": "./dist/components/svelte/Auth/index.js"
    },
    "./svelte/collections": {
      "default": "./dist/components/svelte/Collections/index.js"
    },
    "./svelte/records": {
      "default": "./dist/components/svelte/Records/index.js"
    },
    "./react": {
      "types": "./dist/components/react/index.d.ts",
      "default": "./dist/components/react/index.js"
    },
    "./react/auth": {
      "types": "./dist/components/react/Auth/index.d.ts",
      "default": "./dist/components/react/Auth/index.js"
    },
    "./react/collections": {
      "types": "./dist/components/react/Collections/index.d.ts",
      "default": "./dist/components/react/Collections/index.js"
    },
    "./react/records": {
      "types": "./dist/components/react/Records/index.d.ts",
      "default": "./dist/components/react/Records/index.js"
    },
    "./styles": {
      "default": "./dist/components/styles/pocketcrud.css"
    }
  },
  "scripts": {
    "build": "bun run build:clean && bun run build:tsc && bun run build:resolve && bun run build:copy",
    "build:clean": "rm -rf dist",
    "build:tsc": "tsc",
    "build:resolve": "tsc-alias -p tsconfig.json",
    "build:copy": "cp -r src/components/svelte dist/components/ && cp -r src/components/styles dist/components/",
    "dev": "tsc --watch",
    "dev:yalc": "bun run yalc:publish && bun run dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "bunx eslint src --ext .js,.ts,.tsx --ignore-pattern '*.d.ts'",
    "lint:fix": "bunx eslint src --ext .js,.ts,.tsx --ignore-pattern '*.d.ts' --fix",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "prepublishOnly": "bun run build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "yalc:publish": "bun run build && yalc publish --push --no-scripts",
    "yalc:link": "yalc link",
    "yalc:unlink": "yalc installations clean pocketcrud"
  },
  "keywords": [
    "pocketbase",
    "crud",
    "svelte",
    "react",
    "components",
    "database",
    "cms"
  ],
  "author": "Jack Keller",
  "license": "MIT",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "pocketbase": "^0.21.0"
  },
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "peerDependenciesMeta": {
    "svelte": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.34.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^9.34.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "yalc": "^1.0.0-pre.53"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "private": false
}
